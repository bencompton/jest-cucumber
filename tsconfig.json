{
    "compilerOptions": {
        "target": "es5",
        "declaration": true,
        "module": "commonjs",
        "sourceMap": true,
        "moduleResolution": "node",
        "outDir": "dist",
        "strict": true,
        "useUnknownInCatchVariables": false,        
        "rootDir": ".",
        "lib": ["esnext"],
        "resolveJsonModule": true,
        "skipLibCheck": true
    },
    "exclude": [
        "node_modules",
        "examples/ecmascript",
        "dist"
    ]
}
